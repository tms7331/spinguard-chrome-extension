{
    "manifest_version": 3,
    "name": "Ulterior Motives Detector",
    "version": "1.0.0",
    "description": "Detect hidden agendas, bias, and ulterior motives on websites",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "src/popup/index.html",
        "default_title": "Analyze page motives"
    },
    "background": {
        "service_worker": "src/background.ts"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.ts"
            ]
        }
    ]
}